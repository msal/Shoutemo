<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/autemo_orange"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/listrow_promotion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_event_promotion" />

    <TextView
        android:id="@+id/listrow_promotion_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listrow_promotion_icon"
        android:gravity="end"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/autemo_white_dirty"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listrow_promotion_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listrow_promotion_message"
        android:textAppearance="@style/TextAppearance.Small"
        android:textColor="@color/autemo_white_dirty" />

</RelativeLayout>